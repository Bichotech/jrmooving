---
import SectionContent from "../../components/SectionContent.astro";
---

<SectionContent Title="Do you want to be a carrier?" Reverse=true sideImage="unete-al-equipo-de-transportistas.jpg" idTag="unete-al-equipo">
    <Fragment slot="SectionHTML">
        <p>Join our associated fleet!</p>
        <p>We are looking for committed and responsible carriers to expand our distribution network.</p>
        <p><a href="javascript: void(0);" class="btn btn-primary" id="joinTeam">Send your information</a></p>
    </Fragment>
</SectionContent>

<script>
    const serTransportistaOverlay:HTMLElement = document.querySelector('#serTransportista');
    const buttonOpenForm = document.querySelector('#joinTeam');

    buttonOpenForm.addEventListener('click', () => {
        serTransportistaOverlay.style.display = `block`;
    });
</script>