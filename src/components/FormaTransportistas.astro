<div id="serTransportista">
    <div class="forma-de-registro">
        <div class="close-form">&times;</div>
        <div class="row">
            <div class="col-12 col-xl-6">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Nombre y Apellido">
                </div>
            </div>
            <div class="col-12 col-xl-6">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Empresa</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-xl-6">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">No. de teléfono</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="ej. 999 999 9999">
                </div>
            </div>
            <div class="col-12 col-xl-6">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Correo Electrónico</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">@</span>
                        <input type="email" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-xl-6">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Ciudad</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="">
                </div>
            </div>
            <div class="col-12 col-xl-6">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Estado</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label" style="margin-right: 20px;">Tipo de camión</label>
                    <div class="form-check form-check-inline mt-3">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                        <label class="form-check-label" for="inlineCheckbox1">1.5 Ton.</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
                        <label class="form-check-label" for="inlineCheckbox2">3.5 Ton.</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
                        <label class="form-check-label" for="inlineCheckbox3">Tailles Truck</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
                        <label class="form-check-label" for="inlineCheckbox3">Thornton Truck</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
                        <label class="form-check-label" for="inlineCheckbox3">Trailer</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Unidades disponibles / Flotillas</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Mensaje</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="warnings mt-5"></div>
                <button type="submit" id="theButton" class="btn btn-primary"><i class="fa-solid fa-paper-plane"></i> Enviar</button>
            </div>
        </div>
    </div>
</div>

<script>
    const cerrarForma:HTMLElement = document.querySelector(`.close-form`);
    const serTransportistaOverlay:HTMLElement = document.querySelector(`#serTransportista`);

    cerrarForma.addEventListener(`click`, () => {
        serTransportistaOverlay.style.display = `none`;
    });
</script>

<style lang="scss">
    #serTransportista {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.75);
        backdrop-filter: blur(16px);
        display: none;
        z-index: 99;

        .forma-de-registro {
            display: block;
            background-color: var(--bt-back-color);
            color: white;
            width: 100%;
            max-width: 800px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 60px 40px 50px;
            border-radius: 10px;

            input, textarea {
                font-size: 1.2rem;
                border-radius: unset;
                background-color: transparent;
                border-color: #20354B;
                color: white;
                font-family: var(--sarpanch-font);

                &::placeholder {
                    color: #355270;
                }
            }

            .input-group {
                .input-group-text {
                    background-color: #20354B;
                    color: #355270;
                    border-color: #20354B;
                }
            }
        }

        .close-form {
            position: absolute;
            top: 8px;
            right: 20px;
            font-size: 40px;
            cursor: pointer;
        }
    }
</style>