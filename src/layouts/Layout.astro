---
interface Props {
	title: string;
	description: string;
	keywords?: string;
}

import '../scss/main_styles.scss';

const { title, description, keywords='' } = Astro.props;
const bootstrap_lib = {
	BTStyles: 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css',
	BTScripts: 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js',
	BTIcons: 'https://kit.fontawesome.com/975c1f34c7.js',
	AOSStyles: 'https://unpkg.com/aos@2.3.1/dist/aos.css',
	AOSScripts: 'https://unpkg.com/aos@2.3.1/dist/aos.js'
};
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords}>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<link rel="canonical" href="https://jrmlogistics.com.mx" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name=”robots” content=”index, follow”>
		<link href={bootstrap_lib.BTStyles} rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
		<link href={bootstrap_lib.AOSStyles} rel="stylesheet" crossorigin="anonymous" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300&family=Montserrat:wght@300;700&family=Sarpanch&display=swap" rel="stylesheet">

		<!-- Special tags -->
		<!-- FB -->
		<meta property="og:type" content="page" />
		<meta property="og:title" content="JR Mooving Logistics | Servicios de Logística y transporte" />
		<meta property="og:site_name" content="JR Mooving Logistics: Logística en movimiento" />
		<meta property="og:url" content="https://jrmlogistics.com.mx/" />
		<meta property="og:image" itemprop="image" content="https://jrmlogistics.com.mx/assets/images/thumb.webp" />
		<meta property="og:image:secure_url" content="https://jrmlogistics.com.mx/assets/images/thumb.webp" />
		<meta property="og:image:type" content="image/webp" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="800" />
		<meta property="og:description" content="Somos una compañía dedicada a ayudarlo a crear la mejor ruta para el embarque de sus productos dentro y fuera de la República Mexicana" />
		<!-- TW -->
		<meta property="twitter:creator" content="@JFHdzP" />
		<meta property="twitter:card" content="summary" />
		<meta property="twitter:title" content="JR Mooving Logistics | Servicios de Logística y transporte" />
		<meta property="twitter:url" content="https://jrmlogistics.com.mx/" />
		<meta property="twitter:image" content="https://jrmlogistics.com.mx/assets/images/thumb.webp" />
		<meta property="twitter:description" content="Somos una compañía dedicada a ayudarlo a crear la mejor ruta para el embarque de sus productos dentro y fuera de la República Mexicana" />
	</head>
	<body>
		<slot />
		<script src={bootstrap_lib.BTScripts} integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
		<script src={bootstrap_lib.AOSScripts} crossorigin="anonymous"></script>
		<script src={bootstrap_lib.BTIcons} crossorigin="anonymous"></script>
		<script>
			AOS.init({
				duration: 1200,
				ease: 'ease-in-out'
			});
		</script>
	</body>
</html>
